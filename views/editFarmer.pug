extends layout

block content
  
  div.container-fluid.text-justify
    div.container.my-auto.text-right
      a.ml-0.mr-1.btn.btn-lg.bg-success.text-decoration-none.text-white(href="/displayFarmers") Home
      a.ml-1.mr-0.btn.btn-lg.bg-success.text-decoration-none.text-white(href="/logout") Logout
      
    if error
      div.container.my-5
        div.alert.alert-danger.alert-dismissible.fade.show
          button.close(type="button" data-dismiss="alert")
            span &times;
          p.lead #{error}
    
    div.container.my-5
      div.w-50.mx-auto.my-5
        h1.my-3.display-5 Edit farmer
        form#delete(action="/deleteFarmer", method="POST")
          input.form-control(form="delete", type="hidden", name="id", value=farmer.id)

        form(action="/editFarmer", method="POST")
          input.form-control(type="hidden", name="id", value=farmer.id)
          div.form-group
            input.form-control(type="text", name="name", value=farmer.name)
          div.form-group
            input.form-control(type="text", name="address", value=farmer.address)
          div.form-group
            input.form-control(type="text", name="city", value=farmer.city)
          div.form-group
            input.form-control(type="text", name="coordinates", value=farmer.coordinates)
          div.form-group
            button.w-100.my-1.btn.btn-lg.bg-primary.text-white(type="submit") Edit
            button.w-100.my-1.btn.btn-lg.bg-danger.text-white(form="delete", type="submit") Delete
